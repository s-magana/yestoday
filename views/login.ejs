<%- include('partials/header') -%>

<body id="loginPage" class="main-bg">
  <div class="wrapper">
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %> <% } %> <% if (locals.messages.info) { %> <%
    messages.info.forEach( el => { %>
    <div class="alert alert-info"><%= el.msg %></div>
    <% }) %> <% } %>
    <form action="/login" method="POST">
      <h2 class="title-font">YESTODAY</h2>
      <div class="inputBox">
        <input class="loginInput" type="email" name="email" placeholder="EMAIL" required/>
        <i class="fa-solid fa-user" style="color: #000000;"></i>
      </div>
      <div class="inputBox">
        <input class="loginInput" type="password" name="password" placeholder="PASSWORD" required/>
        <i class="fa-solid fa-lock" style="color: #000000;"></i>
      </div>

      <button type="submit" class="btn">Login</button>

      <div class="registerLink">
        <p>Don't have an account? <a href="/signup">Sign up here!</a></p>
      </div>
    </form>
  </div>
</body>

<%- include('partials/footer') -%>